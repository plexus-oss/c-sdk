{
  "name": "plexus-sdk",
  "version": "1.0.0",
  "description": "Minimal footprint C SDK for sending telemetry to Plexus from ESP32, STM32, and Arduino devices",
  "keywords": [
    "telemetry",
    "iot",
    "embedded",
    "esp32",
    "stm32",
    "arduino",
    "sensors",
    "monitoring"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/plexus/plexus-oss.git"
  },
  "authors": [
    {
      "name": "Plexus Team",
      "url": "https://plexus.company"
    }
  ],
  "license": "MIT",
  "homepage": "https://plexus.company",
  "frameworks": [
    "arduino",
    "espidf"
  ],
  "platforms": [
    "espressif32",
    "espressif8266",
    "ststm32"
  ],
  "headers": "plexus.h",
  "build": {
    "srcFilter": [
      "+<src/>",
      "+<hal/arduino/>"
    ],
    "includeDir": "include",
    "flags": [
      "-DPLEXUS_MAX_METRICS=32",
      "-DPLEXUS_JSON_BUFFER_SIZE=2048"
    ]
  },
  "export": {
    "include": [
      "include/*",
      "src/*",
      "hal/*",
      "examples/*",
      "CMakeLists.txt",
      "README.md",
      "LICENSE"
    ]
  },
  "examples": [
    {
      "name": "esp32_basic",
      "base": "examples/esp32_basic",
      "files": [
        "main.c"
      ]
    }
  ],
  "dependencies": {}
}